{
  "validation": {
    "allowedDirections": ["TB", "BT", "RL", "LR", "TD"],
    "maxDiagramSize": 1000,
    "requiredSections": ["description", "components", "implementation"],
    "styleRules": {
      "useConsistentStyles": true,
      "requireSubgraphTitles": true,
      "enforceNamingConventions": true
    }
  },
  "crossReferences": {
    "maxReferences": 5,
    "minRelevanceScore": 1,
    "topics": {
      "state": ["state", "store", "cache", "persistence"],
      "api": ["api", "rest", "graphql", "endpoint"],
      "auth": ["auth", "authentication", "authorization", "permission"]
    }
  },
  "formatting": {
    "lineLength": 80,
    "codeBlockStyle": "fenced",
    "headingStyle": "atx",
    "listStyle": "hyphen"
  }
}
