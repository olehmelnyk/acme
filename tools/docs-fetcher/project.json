{
  "name": "docs-fetcher",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/docs-fetcher/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/tools/docs-fetcher",
        "main": "tools/docs-fetcher/src/index.ts",
        "tsConfig": "tools/docs-fetcher/tsconfig.json",
        "assets": ["tools/docs-fetcher/*.md"],
        "generatePackageJson": true
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bunx eslint tools/docs-fetcher/src/**/*.ts --config eslint.config.mjs"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/tools/docs-fetcher"
      }
    }
  },
  "tags": []
}
