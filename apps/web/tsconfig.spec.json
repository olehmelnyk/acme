{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../artifacts/web",
    "module": "commonjs",
    "types": ["node", "vitest"],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.d.ts",
    "../vitest.setup.ts"
  ]
}
