{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "target": "es2016",
    "types": ["node", "jest", "playwright"],
    "sourceMap": false,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.spec.ts",
    "src/**/*.spec.js",
    "src/**/*.test.ts",
    "src/**/*.test.js",
    "src/**/*.d.ts",
    "playwright.config.ts"
  ],
  "exclude": ["node_modules", "tmp"]
}
